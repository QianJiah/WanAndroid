<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="toolBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:popupTheme">@style/ToolBarPopupTheme</item>
        <item name="android:theme">@style/ToolBarTheme</item>
    </style>

    <style name="ToolBarPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/item_title</item>
    </style>

    <!--真正控制标题栏的文字和颜色-->
    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/toolbar_button</item>
    </style>

</resources>
